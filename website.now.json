{
  "version": 2,
  "name": "website",
  "builds": [
    {
      "use": "@now/static",
      "config": {
        "distDir": "./packages/website/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/packages/website/public/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}
